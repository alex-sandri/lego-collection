{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "sets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 0
          },
          "info": {
            "type": "object",
            "properties": {
              "theme": {
                "type": "string",
                "enum": [
                  "Botanical Collection",
                  "City",
                  "Creator 3-in-1",
                  "Icons",
                  "Ideas",
                  "Marvel",
                  "Gift with purchase",
                  "Star Wars"
                ]
              },
              "name": {
                "type": "string"
              },
              "pieces": {
                "type": "integer",
                "minimum": 1
              }
            },
            "required": [
              "theme",
              "name",
              "pieces"
            ]
          },
          "price": {
            "type": "object",
            "properties": {
              "paid": {
                "type": "number",
                "minimum": 0
              },
              "full": {
                "type": "number",
                "minimum": 0
              }
            },
            "required": [
              "paid",
              "full"
            ]
          },
          "boughtAt": {
            "type": "string",
            "format": "date"
          },
          "budgetedFor": {
            "type": "string",
            "pattern": "^[0-9]{4}-([0][1-9]|[1][0-2])$"
          }
        },
        "required": [
          "id",
          "info",
          "price",
          "boughtAt",
          "budgetedFor"
        ]
      }
    }
  },
  "required": [
    "sets"
  ]
}
